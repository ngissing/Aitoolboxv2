{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["shared/*"]
    },
    "noErrorTruncation": true,
    "allowJs": true,
    "checkJs": false,
    "ignoreDeprecations": "5.0"
  },
  "include": ["shared/**/*", "server/**/*"],
  "exclude": ["node_modules", "dist"]
}
